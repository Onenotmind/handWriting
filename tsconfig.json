{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    // "jsx": "react",
    "types" : [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./index.d.ts"
    ],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "ES2015.Promise"
    ]
  }
}